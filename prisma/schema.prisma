generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

model Org {
  id      String @unique @default(uuid())
  email   String @unique
  name    String
  phone   String
  address String

  pets Pet[]
}

enum Size {
  SMALL
  MEDIUM
  BIG
}

model Pet {
  id        String  @unique @default(uuid())
  name      String
  breed     String  @default("SRD")
  available Boolean @default(true)
  age       Int
  size      Size

  org   Org    @relation(fields: [orgId], references: [id])
  orgId String
}
